style.
    header {
        text-align: var(--justify-important);
        margin: 0 auto;
        max-width: var(--width-content);
        padding: 3rem 1rem;
    }

    body {
        /*width: 100vw;*/
        display: flex;
        flex-direction: column;
        justify-content: center;
        /*align-items: center;*/
        margin: 40px;
    }

    main {
        margin: 0 auto;
        max-width: var(--width-content);
        padding: 3rem 1rem;
        width: 80%;
    }

    button {
        cursor: pointer;
        border: none;
        outline: none;
        border-radius: 10px;
        /*background-color: #fe9706;*/
        font-weight: bold;
        /*color: white;*/
        font-size: 16px;
    }

    #welcome #welcome_form {
        display: flex;
        max-width: 100%;
        padding: 1.5rem;
        background: #F5EFE7;
    }

    #welcome #welcome_form button {
        background: #D8C4B6;
        border: 2px solid #D8C4B6;
        color: #977E7D;
    }

    #welcome #welcome_form button:hover {
        background: #967E76;
        border: 2px solid #967E76;
        color: #FFFFFF;
    }

    #welcome #welcome_form div {
        flex-grow: 2;
        margin-right: 16px;
    }

    #welcome #welcome_form div input {
        border: none;
        outline: none;
        /*margin: 8px;*/
        width: 100%;
        border-radius: 5px;
        padding: 15px 18px;
        box-sizing: border-box;
        max-width: 100%;
    }

    #welcome #welcome_form div #name {
        margin-top: 8px;
    }


    #room #room_div {
        padding: 1.5rem;
        border: 1px solid var(--color-bg-secondary);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow) var(--color-shadow);
        background: #F5EFE7;
    }

    #room #room_info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    #room #msg {
        display: flex;
        /*max-width: 100%;*/
        align-items: center;
        border: none;
        box-shadow: none;
        padding: 0;
    }

    #room #nickname{
        border: none;
        box-shadow: none;
        padding: 0;
        margin-bottom: 24px;
    }

    #room #msg input{
        margin: 0;
        width: 80%;
        border: none;
        outline: none;
        padding: 8px 16px;
        border-radius: 4px;
        background-color: #ffffff;
    }

    #room #nickname input{
        margin: 0;
        /*width: 80%;*/
        border: none;
        outline: none;
        padding: 8px 16px;
        border-radius: 4px;
        background-color: #F5EFE7;
    }

    #room #exit {
        background-color: #e61111;
        padding: 8px 10px;
        border-radius: 6px;
        /*border: 1px;*/
        color: #ffffff;
        font-weight: bold;
        cursor: pointer;
    }



    #room #msg button, #room #nickname button {
        background: #D8C4B6;
        border: 2px solid #D8C4B6;
        color: #977E7D;
        width: 20%;
        padding: 5px;
    }

    #room #msg button:hover #room #nickname button:hover{
        background: #977E7D;
        border: 2px solid #977E7D;
        color: #FFFFFF;
    }

    #room ul {
        height: 300px;
        overflow-y: scroll;
        max-width: 100%;
        display: flex;
        flex-direction: column;
        padding: 8px;
        border-radius: 4px;
        margin: 0;
        border: 1px solid #ffffff;
    }

    #room ul::-webkit-scrollbar {
        width: 10px; /* Ïä§ÌÅ¨Î°§Î∞îÏùò ÎÑàÎπÑ */
    }

    #room ul::-webkit-scrollbar-thumb {
        height: 30%; /* Ïä§ÌÅ¨Î°§Î∞îÏùò Í∏∏Ïù¥ */
        background: #848484; /* Ïä§ÌÅ¨Î°§Î∞îÏùò ÏÉâÏÉÅ */
        border-radius: 10px;
    }

    #room ul::-webkit-scrollbar-track {
        background: #ffffff; /*Ïä§ÌÅ¨Î°§Î∞î Îí∑ Î∞∞Í≤Ω ÏÉâÏÉÅ*/
    }

    #room ul li {
        list-style: none;
    }

    #room ul .mine {
        display: flex;
        padding: 12px 24px;
    }

    #room ul .mine span {
        background: #213555;
        padding: 10px;
        color: #FFFFFF;
        border-radius: 5px;
        margin-left: auto;
    }

    #room ul .system {
        text-align: center;
        padding: 12px;
    }

    #room ul .others {
        padding: 12px 0;
    }

    #room ul .others span {
        background: #4F709C;
        padding: 10px;
        color: #FFFFFF;
        border-radius: 5px;
    }